        function ShowReport() {
            debugger;
            var fromdate;
            var todate;
            var branchid = '';
            var empId = '0';
            if ($('#txtFromDate').val() == "") {
                swal("Please input from date");
                return;
            }
            else {
                fromdate = $('#txtFromDate').val();
            }
            if ($('#txtToDate').val() == "") {
                swal("Please input to date");
                return;
            }
            else {
                todate = $('#txtToDate').val();
            }
            //if ($('#ddlManager').val() == "0" || $('#ddlManager').val() == "") {
