            //}

            //if ($('#ddlBranch').val() == "") {
            //    branchid = '';
            //}
            //else {
            //    branchid = $('#ddlBranch').val();
            //}

            var urlpath = '@Url.Action("ActivityList_Search", "Activity")';
            $.ajax({
                url: urlpath,
                dataType: 'html',
                type: "Get",
                data: { fromdate: fromdate, todate: todate},
                async: false,
                success: function (data) {
                    debugger;
                    data = JSON.parse(data);
                    if (data.UnAutorized == 1) {
                          window.location.href =  '@Url.Action("Login", "Home")';
                    } else {
                        var row = "";
                        var count = 1;
                        $("#manuallist").html("");

                        var count = 1;
                        $.each(data.dataList, function (index, item) {

                            row += "<tr>";
                            row += "<td style='text-align:center'>" + count + "</td>";
                            row += "<td style='text-align:center'>" + item.TypeName + "</td>";
                            row += "<td style='text-align:center'>" + item.TypeMasterName + "</td>";
                            row += "<td style='text-align:center'>" + item.ActivityDate + "</td>";
                            row += "<td style='text-align:center'>" + item.EmployeeName + "</td>";
                            row += "<td style='text-align:center'>" + item.StartTime + "</td>";
                            row += "<td style='text-align:center'>" + item.StartTime1 + "</td>";
                            row += "<td style='text-align:center'>" + item.StatusName + "</td>";
                            row += "<td style='text-align:center'><button class='btn btn-sm btn-primary showBtn' data-bs-toggle='modal' data-bs-target='#viewModal' onclick='ShowData(" + item.ActivityId + ")'>View</button></td>";
                            row += "</tr>";
                            count = count + 1;
                        });
                        $("#manuallist").html(row);
                    }
                   /* if (data.length > 0) {*/

                    //}
                }
            });
        }
        function ShowData(id) {
            //$('#viewModal').modal();
            ViewOrder(id);
            //$("#eid").val(id);
            GetActivity(id);

            //LoadBranch('ddlBranch');
            //var branch = $('#branch').val();
            //$("#ddlBranch").val(branch).trigger('change');
        }
        function ViewOrder(id) {
            var urlpath = '@Url.Action("ViewActivity", "Activity")';
            $.ajax({
                url: urlpath,

                dataType: 'html',
                data: {id:id},
                type: "Get",

                async: false,
                success: function (data) {

                    $('#containerDetails').html(data);

                }
            });
        }
        function LoadBranch(elementId) {
            var urlpath = '@Url.Action("GetBranch", "InventoryTransferRequest")';
            $.ajax({
                url: urlpath,
                type: "Get",
                data: { },
                async: false,
                success: function(data) {

                    $('#' + elementId + '').empty();
                    $('#' + elementId + '').append("<option value=''>--Select Branch--</option>");
                    for (var i = 0; i < data.length; i++) {

                        $('#' + elementId + '').append($("<option></option>").val(data[i].PrcCode).html(data[i].PrcName ));
                    }

                }
            });
        }
        function GetActivity(ActivityCode) {
            var activityCode = ActivityCode.toString();
            var urlpath = '@Url.Action("ActivityViewData", "Activity")';
            $.ajax({
                data: { ActivityCode: activityCode },
                url: urlpath,
                dataType: 'json',
                type: "Get",
                async: false,
                success: function (data) {
                    if (data.UnAutorized == 1) {
                        window.location.href = '@Url.Action("Login", "Home")';
                    } else {
                        $('#ddlActivityType').val(data.dataList.TypeName);
                        $('#ddlActivity').val(data.dataList.TypeMasterName);
                        $('#txtActivityDate').val(data.dataList.ActivityDate);
                        $('#txtTaskDetails').val(data.dataList.TaskDetails);
                        $('#txtFromTime').val(data.dataList.StartTime);
                        $('#txtToTime').val(data.dataList.StartTime1);
                        $('#txtAssinedTo').val(data.dataList.EmployeeName);
                        $('#txtTaskStatus').val(data.dataList.StatusName);
                        $('#txtStatus').val(data.dataList.OperationStatusDesc);
                        $('#txtSession').val(data.dataList.SessionDesc);
                        $('#txtCustomer').val(data.dataList.CardCode);
                        $('#txtSalesOrder').val(data.dataList.SalesOrder);
                        $('#txtSalesItem').val(data.dataList.SalesItem);
                        $('#txtComments').val(data.dataList.Comments);
                        $('#ddlBranch').val(data.dataList.BranchName);
                    }

                }
            });
        }
        function LoadActivityType(elementId) {
