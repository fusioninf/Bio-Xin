@{
    int sl = Convert.ToInt32(TempData["trSl"]);
}
<tr id="tr_@sl">

    @*<td id="ts_@sl">@sl</td>*@
    <td id="modes_@sl">
        <select class="form-control select2" id="mode_@sl" style="width: 100px" onchange="GetPaymentBankByMode(@sl)"></select>

    </td>
    <td>
        <select class="form-control select2" id="account_@sl" style="width: 100px"></select>
    </td>


    <td>
        <select class="form-control select2" id="voucher_@sl" style="width: 100px" onchange="GetVAmountByVoucher(@sl)"></select>
    </td>
    <td>
        <input type="number" class="form-control" id="voucheramount_@sl" value="0" disabled="disabled" />
    </td>


    <td>
        <input type="number" class="form-control" id="amount_@sl" value="0" onclick="PaymentAmountCal(@sl)" oninput="CalculateTotalPaid()" />
    </td>
    <td>
        <input type="text" class="form-control" id="transactionID_@sl" />
    </td>
    <td>
        <input type="text" class="form-control" id="cardNumber_@sl" />
    </td>
    <td class="actionHide">
        <div class="form-group">
            <button class="btn btn-xs btn-success " id="btnPaymentModeAdd_@sl" onclick="AddPaymentModeRow()"><b>+</b></button>
            <button class="btn btn-xs btn-danger" id="btnPaymentModeRemove_@sl" onclick="RemovePaymentModeRow(@sl)"><b></b>x</button>
        </div>
    </td>
</tr>
