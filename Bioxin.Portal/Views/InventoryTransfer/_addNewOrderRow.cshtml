        <input type="text" class="form-control" id="uom_@sl" style="width: 40px" disabled="disabled" />
    </td>

    @*<td>

        </td>
        <td>


        </td>*@
    <td>
        @*<select class="form-control select2" id="fromWH_@sl" style="width: 100px; display: none"></select>
            <select class="form-control select2" id="toWH_@sl" style="width: 100px; display:none"></select>*@
        <input type="number" class="form-control" id="quantity_@sl" oninput="CalculateLineTotal(@sl)" style="width: 70px" />
    </td>
    <td>
        @*<input type="number" class="form-control" id="batchSerialNo_@sl" style="width: 80px" disabled="disabled" />*@
        @*<input type="button" id="btnpopup" value="Batches" onclick="ShowData(@sl)" />*@
        <button class="btn btn-sm btn-primary showBtn" data-bs-toggle="modal" data-bs-target="#viewModal" onclick="ShowData(@sl)" id="showBtn_@sl" style="display:none">Batches</button>
        <button class="btn btn-sm btn-primary showBtn" data-bs-toggle="modal" data-bs-target="#viewModal" onclick="ShowSerialData(@sl)" id="showSerialBtn_@sl" style="display:none">Serial</button>
    </td>
    @*<td>

        </td>
        <td>

        </td>*@
    <td>
        <input type="hidden" class="form-control" id="price_@sl" oninput="CalculateLineTotal(@sl)" style="width: 60px" />
        <input type="hidden" class="form-control" id="value_@sl" style="width: 60px" disabled="disabled" />
        <input type="text" class="form-control" id="remarks_@sl" style="width: 280px" />
    </td>

