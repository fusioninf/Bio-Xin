@{
    int sl = Convert.ToInt32(TempData["trSl"]);
}
<tr id="tr_@sl">

    <td id="ts_@sl">@sl</td>
    <td>
        <select class="form-control select2" id="patientTest_@sl" style="width: 150px"></select>
    </td>
    <td>
        <input type="text" class="form-control" id="value_@sl" />
    </td>
    <td class="actionHide">
        <div class="form-group">
            <button class="btn btn-xs btn-success " id="btnAdd_@sl" onclick="AddPatientTestRow()"><b>+</b></button>
            <button class="btn btn-xs btn-danger" id="btnRemove_@sl" onclick="RemovePatientTestRow(@sl)"><b></b>x</button>
        </div>
    </td>
</tr>
