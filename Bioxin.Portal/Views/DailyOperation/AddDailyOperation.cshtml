        function SaveValidation() {


            var isValid = true;
            var message = "Some Values Required";
            if ($('#ddlEmployee').val() == 0 || $('#ddlEmployee').val() == '') {
                ValidationColorChangeNew("ddlEmployee", "divEmployee", "Employee Required", true);
                isValid = false;
            }
            if ($('#txtDocDate').val() == '' || $('#txtDocDate').val() == null) {
