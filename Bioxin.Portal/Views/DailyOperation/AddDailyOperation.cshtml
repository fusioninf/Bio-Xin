                isValid = false;
            }
            if ($('#ddlBranch').val() == 0 || $('#ddlBranch').val() == '') {
                ValidationColorChangeNew("ddlBranch", "divBranch", "Branch Required", true);
                isValid = false;
            }
            if ($('#ddlSession').val() == 0 || $('#ddlSession').val() == '') {
                ValidationColorChangeNew("ddlSession", "divSession", "Session Required", true);
                isValid = false;
            }
            //Items Required
            if ($('#salesOrder tbody tr').length == 0 || $('#salesOrder tbody tr').length == '') {
                isValid = false;
                message = "Work Activities Required";
            }


            $('#salesOrder tbody tr').each(function() {


                var idr = $(this).attr('id');
                var id = idr.substring(3);

                var wActivities = $('#WActivities_' + id).val()
                var wStatus = $('#WStatus_' + id).val()
                var signature = $('#Signature_' + id).val()

                if (wActivities === '' || wActivities === null) {
                    isValid = false;
                    message = "Please Select Work Status";
                    $('#WActivities_' + id).css('border-bottom', '2px solid red');
                    return;
                }
                if (wStatus === '' || wStatus === null) {
                    isValid = false;
                    message = "Please Select Work Status";
                    $('#WStatus_' + id).css('border-bottom', '2px solid red');
                    return;
                }
                if (signature === '' || signature === null) {
                    isValid = false;
                    message = "Please Select Signature";
                    $('#Signature_' + id).css('border-bottom', '2px solid red');
                    return;
                }

            });
            if (isValid == false) {
                ShowMessage(message);

            }
            return isValid;


        }

