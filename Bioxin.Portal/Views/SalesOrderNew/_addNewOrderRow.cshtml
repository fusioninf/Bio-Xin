@{
    int sl = Convert.ToInt32(TempData["trSl"]);
}
<tr id="tr_@sl">

    <td id="ts_@sl">@sl</td>
    <td>
        @*<select class="form-control select2" id="barcode_@sl" style="width: 150px" onchange="GetItemDetails(@sl)"></select>*@
        <input type="text" class="form-control" id="barcode_@sl" style="width: 60px" />
    </td>
    <td>
        <input type="text" class="form-control" id="itemName_@sl" style="width: 150px" disabled="disabled" />
    </td>
    <td>
        <input type="number" class="form-control" id="quantity_@sl" style="width: 60px" value="1" oninput="LineCalculation(@sl)" />
    </td>
    <td>
        <input type="text" class="form-control" id="uom_@sl" disabled="disabled" />
    </td>
    <td>

       <input type="number" class="form-control" id="price_@sl" style="width: 60px" oninput="LineCalculation(@sl)" disabled="disabled"/>
    </td>
    <td>
        <input type="number" class="form-control" id="discount_@sl" style="width: 60px" oninput="LineCalculation(@sl)" />
        <input type="number" class="form-control"  id="discountMode_@sl" style="display:none" oninput="LineCalculation(@sl)"/>
    </td>
    <td>
        <input type="number" class="form-control" id="discountamount_@sl" style="width: 60px" disabled="disabled" />
    </td>
    <td>
        <input type="text" class="form-control" id="taxcode_@sl" style="width: 80px" disabled="disabled" />
        <input type="hidden" id="taxrate_@sl" />
    </td>
    <td>
        <input type="number" class="form-control" id="taxamount_@sl" style="width: 60px" disabled="disabled" />
    </td>

    <td>
        <input type="number" class="form-control" id="total_@sl" style="width: 60px" disabled="disabled" />
        <input type="hidden" id="totalbeforetax_@sl" />
    </td>
    <td>
        <input type="number" class="form-control" id="stock_@sl" style="width: 60px" disabled="disabled" />
        @*<input type="hidden" class="form-control" id="deliverydate_@sl" style="width: 70px" />*@
    </td>
    <td>
        <input type="text" class="form-control" id="deliverydate_@sl" style="width: 70px" />
    </td>
    <td class="actionHide">
        <div class="form-group">
            @*<button class="btn btn-xs btn-success " id="btnAdd_@sl" onclick="AddRow()"><b>+</b></button>*@
            <button class="btn btn-xs btn-danger" id="btnRemove_@sl" onclick="RemoveRow(@sl)"><b></b>x</button>
        </div>
    </td>
</tr>
